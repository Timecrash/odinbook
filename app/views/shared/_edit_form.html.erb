<%= form_for post do |f| %>
  <div class="field">
    <%= f.text_area :text %>
  </div>
  
  <div class="field">
    <%= f.label :image, "Replace image" %>
    <%= f.file_field :image %>
  </div>
  
  <div class="actions">
    <%= f.submit "Update", class: "btn btn-sm btn-primary" %>
  </div>
  <br />
<% end %>