<% unless current_user == user %>
  <% if current_user.friends?(user) %>
    <br />
    <%= form_for current_user.get_friendship(user), method: :delete do |f| %>
      <%= f.submit "Unfriend this user", class: "btn btn-link",
                                         data: { confirm: "Are you sure you want to unfriend this user?" } %>
    <% end %>
  <% elsif !current_user.pending_friend(user).empty? %>
    <br />
    <%= form_for current_user.pending_friend(user).first do |f| %>
      <%= f.submit "Ignore friend request", class: "btn btn-link", name: 'ignore' %>
      <br />
      <%= f.submit "Accept friend request", class: "btn btn-link" %>
    <% end %>
  <% else %>
    <br />
    <%= form_for current_user.active_friendships.build do |f| %>
      <div><%= hidden_field_tag :user, user.id %></div>
      <%= f.submit "Add friend", class: "btn btn-link" %>
    <% end %>
  <% end %>
<% end %>