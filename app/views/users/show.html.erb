<% provide(:title, current_user.name) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= avatar(@user) %>
        <%= @user.name %>
      </h1>
      <%= link_to pluralize(current_user.friends.count, "friend", friends_user_path(current_user)) %>
    </section>
    <!-- Friends -->
    <section class="post_form">
      <%= render 'shared/post_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% else %>
      <h3><%= @user.first_name %> hasn't posted yet</h3>
    <% end %>
  </div>
</div>